@{
    ViewData["Title"] = "Our Story";
}

<!-- Meet the Founders Section -->
<section class="meet-founders py-5 bg-light" data-aos="zoom-in">
    <div class="container">
        <h2 class="mb-5 text-center">@ViewData["foundersHeader"]</h2>
        <div class="row justify-content-center gy-4">
            <div class="col-md-4 text-center">
                <img src="/images/founder1.jpg" alt="Founder 1" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">@ViewData["founder1Name"]</h5>
                <p class="text-muted fst-italic mb-2">@ViewData["founder1Title"]</p>
                <p>@ViewData["founder1Content"]</p>
            </div>
            <div class="col-md-4 text-center">
                <img src="/images/founder2.jpg" alt="Founder 2" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">@ViewData["founder2Name"]</h5>
                <p class="text-muted fst-italic mb-2">@ViewData["founder2Title"]</p>
                <p>@ViewData["founder2Content"]</p>
            </div>
            <div class="col-md-4 text-center">
                <img src="/images/founder3.jpg" alt="Founder 3" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">@ViewData["founder3Name"]</h5>
                <p class="text-muted fst-italic mb-2">@ViewData["founder3Title"]</p>
                <p>@ViewData["founder3Content"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Timeline Section -->
<section class="our-story-timeline py-5">
    <div class="container">
        <h2 class="mb-5 text-center">@ViewData["timelineHeader"]</h2>
        <div class="timeline">
            <div class="timeline-item mb-5">
                <div class="row align-items-center">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>@ViewData["time1Header"]</h4>
                        <p>@ViewData["time1Content"]</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2018.jpg" alt="2018 The Idea" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
            <div class="timeline-item mb-5">
                <div class="row align-items-center flex-md-row-reverse">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>@ViewData["time2Header"]</h4>
                        <p>@ViewData["time2Content"]</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2019.jpg" alt="2019 Launch" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
            <div class="timeline-item mb-5">
                <div class="row align-items-center">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>@ViewData["time3Header"]</h4>
                        <p>@ViewData["time3Content"]</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2021.jpg" alt="2021 Growth" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
            <div class="timeline-item mb-5">
                <div class="row align-items-center flex-md-row-reverse">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>@ViewData["time4Header"]</h4>
                        <p>@ViewData["time4Content"]</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2024.jpg" alt="2024 Future" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Brand Values Section -->
<section class="brand-values bg-light py-5" data-aos="zoom-in">
    <div class="container">
        <h2 class="mb-5 text-center">@ViewData["valuesHeader"]</h2>
        <div class="row text-center gy-4">
            <div class="col-md-4">
                <img src="/images/value-quality.svg" alt="Quality" class="mb-3" style="height: 80px;">
                <h5>@ViewData["values1Header"]</h5>
                <p>@ViewData["values1Content"]</p>
            </div>
            <div class="col-md-4">
                <img src="/images/value-science.svg" alt="Science" class="mb-3" style="height: 80px;">
                <h5>@ViewData["values2Header"]</h5>
                <p>@ViewData["values2Content"]</p>
            </div>
            <div class="col-md-4">
                <img src="/images/value-sustainability.svg" alt="Sustainability" class="mb-3" style="height: 80px;">
                <h5>@ViewData["values3Header"]</h5>
                <p>@ViewData["values3Content"]</p>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });
</script>

<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "AboutPage",
    "name": "Brava - Our Story",
        "url": "https://www.Bravanutrition.com/OurStory",
    "description": "Learn about Brava's founders, milestones, and core values.",
    "mainEntity": {
    "@@type": "Organization",
    "name": "Brava",
        "url": "https://www.Bravanutrition.com",
    "logo": {
        "@@type": "ImageObject",
            "url": "https://www.Bravanutrition.com/images/logo-dark.svg"
    },
    "founder": [
        {
        "@@type": "Person",
        "name": "@ViewData["founder1Name"]",
        "jobTitle": "@ViewData["founder1Title"]",
        "description": "@ViewData["founder1Content"]",
            "image": "https://www.Bravanutrition.com/images/founder1.jpg"
        },
        {
        "@@type": "Person",
        "name": "@ViewData["founder2Name"]",
        "jobTitle": "@ViewData["founder2Title"]",
        "description": "@ViewData["founder2Content"]",
            "image": "https://www.Bravanutrition.com/images/founder2.jpg"
        },
        {
        "@@type": "Person",
        "name": "@ViewData["founder3Name"]",
        "jobTitle": "@ViewData["founder3Title"]",
        "description": "@ViewData["founder3Content"]",
            "image": "https://www.Bravanutrition.com/images/founder3.jpg"
        }
    ],
    "foundingDate": "2018-01-01",
    "description": "@ViewData["timelineHeader"]"
    }
}
</script>