@{
    ViewData["Title"] = "Our Story";
}

<!-- Meet the Founders Section -->
<section class="meet-founders py-5 bg-light" data-aos="zoom-in">
    <div class="container">
        <h2 class="mb-5 text-center">Meet the Founders</h2>
        <div class="row justify-content-center gy-4">

            <div class="col-md-4 text-center">
                <img src="/images/founder1.jpg" alt="Founder 1" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">Jane Smith</h5>
                <p class="text-muted fst-italic mb-2">Co-Founder & CEO</p>
                <p>Passionate about hydration science and dedicated to delivering clean, effective products to consumers worldwide.</p>
            </div>

            <div class="col-md-4 text-center">
                <img src="/images/founder2.jpg" alt="Founder 2" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">Michael Johnson</h5>
                <p class="text-muted fst-italic mb-2">Co-Founder & Head of Innovation</p>
                <p>Brings extensive scientific expertise and innovation to develop formulas that truly hydrate and refresh.</p>
            </div>

            <div class="col-md-4 text-center">
                <img src="/images/founder3.jpg" alt="Founder 3" class="rounded-circle mb-3" style="width: 180px; height: 180px; object-fit: cover;">
                <h5 class="mb-1">Emily Davis</h5>
                <p class="text-muted fst-italic mb-2">Co-Founder & Marketing Director</p>
                <p>Focuses on connecting the brand with customers through storytelling and impactful marketing strategies.</p>
            </div>

        </div>
    </div>
</section>

<!-- Timeline Section -->
<section class="our-story-timeline py-5">
    <div class="container">
        <h2 class="mb-5 text-center">Our Journey</h2>
        <div class="timeline">
            <div class="timeline-item mb-5">
                <div class="row align-items-center">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>2018 - The Idea</h4>
                        <p>Inspired by the need for cleaner hydration options, Brava was born from a passion for science and health.</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2018.jpg" alt="2018 The Idea" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>

            <div class="timeline-item mb-5">
                <div class="row align-items-center flex-md-row-reverse">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>2019 - First Product Launch</h4>
                        <p>We launched our first hydration formula, crafted with natural ingredients and backed by science.</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2019.jpg" alt="2019 Launch" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>

            <div class="timeline-item mb-5">
                <div class="row align-items-center">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>2021 - Growth & Innovation</h4>
                        <p>Expanded our product line and strengthened partnerships with top hydration scientists worldwide.</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2021.jpg" alt="2021 Growth" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>

            <div class="timeline-item mb-5">
                <div class="row align-items-center flex-md-row-reverse">
                    <div class="col-md-6" data-aos="fade-right">
                        <h4>2024 - Looking Ahead</h4>
                        <p>Continuing our mission to redefine hydration with innovative, clean, and effective products for everyone.</p>
                    </div>
                    <div class="col-md-6" data-aos="fade-left">
                        <img src="/images/our-story-2024.jpg" alt="2024 Future" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Brand Values Section -->
<section class="brand-values bg-light py-5" data-aos="zoom-in">
    <div class="container">
        <h2 class="mb-5 text-center">What Drives Us</h2>
        <div class="row text-center gy-4">
            <div class="col-md-4">
                <img src="/images/value-quality.svg" alt="Quality" class="mb-3" style="height: 80px;">
                <h5>Uncompromising Quality</h5>
                <p>Every bottle is crafted with the highest standards and purest ingredients.</p>
            </div>
            <div class="col-md-4">
                <img src="/images/value-science.svg" alt="Science" class="mb-3" style="height: 80px;">
                <h5>Science-Backed Formulas</h5>
                <p>We base every product on proven research to deliver real hydration benefits.</p>
            </div>
            <div class="col-md-4">
                <img src="/images/value-sustainability.svg" alt="Sustainability" class="mb-3" style="height: 80px;">
                <h5>Commitment to Sustainability</h5>
                <p>Eco-friendly practices and packaging to protect the planet.</p>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });
</script>