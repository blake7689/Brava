@{
    ViewData["Title"] = "Science";
}

<section class="science-hero bg-light text-center py-5" data-aos="fade-up">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">@ViewData["heroHeader"]</h1>
        <p class="lead mx-auto" style="max-width: 700px;">
            @ViewData["heroContent"]
        </p>
    </div>
</section>

<section class="science-content py-5">
    <div class="container">
        <div class="row align-items-center mb-5" data-aos="fade-left">
            <div class="col-md-6 order-md-2">
                <img src="~/images/science-hydration.jpg" alt="Hydration Science" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6 order-md-1">
                <h2>@ViewData["section1Header"]</h2>
                <p>
                    @ViewData["section1Content1"]
                </p>
                <p>
                    @ViewData["section1Content2"]
                </p>
            </div>
        </div>

        <div class="row align-items-center mb-5" data-aos="fade-right">
            <div class="col-md-6">
                <img src="~/images/science-ingredients.jpg" alt="Natural Ingredients" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6">
                <h2>@ViewData["section1Header2"]</h2>
                <p>
                    @ViewData["section2Content1"]
                </p>
                <p>
                    @ViewData["section2Content2"]
                </p>
            </div>
        </div>

        <div class="row align-items-center mb-5" data-aos="fade-left">
            <div class="col-md-6 order-md-2">
                <img src="~/images/science-research.jpg" alt="Scientific Research" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6 order-md-1">
                <h2>@ViewData["section1Header3"]</h2>
                <p>
                    @ViewData["section3Content1"]
                </p>
                <p>
                    @ViewData["section3Content2"]
                </p>
            </div>
        </div>
    </div>
</section>

<section class="call-to-action bg-primary text-white text-center py-5" data-aos="zoom-in">
    <div class="container">
        <h3 class="mb-3">@ViewData["callToActionHeader"]</h3>
        <a href="/Shop" class="btn btn-light btn-lg">Shop Brava Now</a>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
      duration: 800,  
      easing: 'ease-in-out',
      once: true      
    });
</script>


<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "WebPage",
    "name": "Brava - Science",
    "url": "https://www.Bravanutrition.com/Science",
    "description": "@ViewData["heroContent"]",
    "mainEntity": {
    "@@type": "Article",
    "headline": "@ViewData["heroHeader"]",
    "author": {
        "@@type": "Organization",
        "name": "Brava"
    },
    "publisher": {
        "@@type": "Organization",
        "name": "Brava",
        "logo": {
        "@@type": "ImageObject",
        "url": "https://www.Bravanutrition.com/images/logo-dark.svg"
        }
    },
    "image": [
        "https://www.Bravanutrition.com/images/science-hydration.jpg",
        "https://www.Bravanutrition.com/images/science-ingredients.jpg",
        "https://www.Bravanutrition.com/images/science-research.jpg"
    ],
    "articleBody": "@ViewData["section1Content1"] @ViewData["section1Content2"] @ViewData["section2Content1"] @ViewData["section2Content2"] @ViewData["section3Content1"] @ViewData["section3Content2"]"
    }
}
</script>