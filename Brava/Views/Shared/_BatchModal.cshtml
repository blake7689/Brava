<div id="batchModal" class="modal" aria-hidden="true" role="dialog" aria-labelledby="modalTitle" aria-describedby="modalDesc">
    <div class="modal-backdrop"></div>
    <div class="modal-content" role="document">
        <button class="close-button" aria-label="Close modal">&times;</button>
        <h2 id="modalTitle" class="modal-title">Batch Information</h2>
        <div id="modalDesc" class="modal-body">
            <div class="modal-row">
                <span class="modal-label">Batch Number:</span>
                <span id="modalBatchNumber" class="modal-value"></span>
            </div>
            <div class="modal-row">
                <span class="modal-label">Manufactured Date:</span>
                <span id="modalManufacturedDate" class="modal-value"></span>
            </div>
            <div class="modal-row">
                <span class="modal-label">Manufactured Location:</span>
                <span id="modalManufacturedLocation" class="modal-value"></span>
            </div>
            <div class="modal-row">
                <span class="modal-label">Creatine Content:</span>
                <span id="modalCreatineContent" class="modal-value"></span>
            </div>
        </div>
    </div>
</div>
