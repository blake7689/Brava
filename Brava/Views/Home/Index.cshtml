@using Brava.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

@section VideoBanner {
    <section class="video-banner">
        <video autoplay muted loop playsinline @* poster="~/images/fallback.jpg" *@>
            <source src="~/videos/banner.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <div class="overlay">
            <h1>Welcome to Brava</h1>
            <p>Creatine Gummies. Backed by science. Built for performance.</p>
            <a href="https://www.amazon.com/" target="_blank" class="shop-now-button-banner">Shop Now</a>
        </div>
    </section>
}

<section class="product-section">
    <div class="product-section-grid">
        <div class="product-hero">
            <img src="~/images/product-hero.jpg"
                 alt="Brava Product"
                 loading="lazy"
                 decoding="async"
                 width="600"
                 height="800"
                 style="width: 100%; height: 100%;" />
            <a href="https://www.amazon.com/" target="_blank" class="shop-all-button">Shop All</a>
        </div>
        <div class="product-grid">
            @foreach (var gummie in Model.Gummies)
            {
                <partial name="_GummieCard" model="gummie" />
            }
        </div>
    </div>
</section>

<section class="testimonials">
    <h2>What Our Customers Say</h2>
    <div class="testimonial">
        <p>"Brava's creatine gummies have transformed my workouts!"</p>
        <cite>- Alex D.</cite>
    </div>
</section>